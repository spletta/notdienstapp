<%= simple_form_for(@pharmacy, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

<table class="table table-hover">
  <tr>
    <td><%= f.label t('pharmacies.emergency.group.dropdown.label', default: 'Emergency Group') %></td>
    <td><%= f.collection_select :emergency_group_id, EmergencyGroup.all, :id, :name, :include_blank => t('pharmacies.emergency.group.select', default: 'Please select') %></td>
  </tr>
  <tr> 
	  <td><%= f.label t('pharmacies.name', default: 'Name of the Pharmacy') %></td>
	  <td><%= f.text_field :name %></td>
	</tr>
	<tr> 
	  <td><%= f.label t('pharmacies.owner.name', default: "Owner's name") %></td>
	  <td><%= f.text_field :owner_name %></td>
	</tr>
	<tr> 
		<td><%= f.label t('pharmacies.bga.number', default: 'BGA Number') %></td>
	  <td><%= f.text_field :bga_number %></td>	
	</tr>
	<tr> 
		<td><%= f.label t('pharmacies.address', default: 'Address') %></td>
	  <td><%= f.text_area :address, :rows => 5 %></td>
	</tr>
  <tr> 
		<td><%= f.label t('pharmacies.city', default: 'City') %></td>
	  <td><%= f.text_field :city %></td>
	</tr>
  <tr> 
		<td><%= f.label t('pharmacies.zipcode', default: 'ZIP code') %></td>
	  <td><%= f.text_field :zipcode %></td>
	</tr>	
	<tr> 
		<td><%= f.label t('pharmacies.phone.number', default: 'Phone number') %></td>
	  <td><%= f.text_field :phone_number %></td>	
	</tr>
	<tr> 
		<td><%= f.label t('pharmacies.fax.number', default: 'Fax number') %></td>
	  <td><%= f.text_field :fax_number %></td>	
  </tr>
  <tr> 
		<td><%= f.label :email %></td>
	  <td><%= f.text_field :email %></td>	
  </tr>
  <tr> 
		<td><%= f.label :website_url %></td>
	  <td><%= f.text_field :website_url %></td>	
  </tr>
  <tr> 
		<td><%= f.label t('pharmacies.open', default: "Open daily from") %></td>
	  <td><%= f.text_field :start_hours %></td>	
  </tr>
  <tr> 
		<td><%= f.label t('pharmacies.closed', default: "Closed daily at") %></td>
	  <td><%= f.text_field :end_hours %></td>	
	</tr>
	<tr> 
		<td><%= f.label t('pharmacies.emergency.hours.from', default: "Emergency hours from") %></td>
	  <td><%= f.text_field :emergency_hours_starttime %></td>	
  </tr>
  <tr> 
		<td><%= f.label t('pharmacies.emergency.hours.to', default: "Emergency hours to") %></td>
	  <td><%= f.text_field :emergency_hours_endtime %></td>	
	</tr>
</table>
<%= link_to t('pharmacies.back.link', default: "Back"), pharmacies_path, class: "btn btn-mini" %>
<%= f.submit t('pharmacies.save', default: "Save"), class: "btn btn-mini btn-primary" %>
<% end %>

