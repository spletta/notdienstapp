<% if event != nil %>
<% @events.each do |event| %>
  <% if event.starttime == Date.today %>
    <div class="mc"></div>
		<div class="white_container">
		  <center>
			  <h1b><strong><%= event.pharmacy.emergency_group.website_title %></strong></h1b>
			</center>
		</div>
		<div class="mb"></div>
		<div class="white_container_middle">
			<center>
				<h2b><%= event.pharmacy.name %></h2b>
			</center><br>
			<center>
				<h3b>Von <%= l(event.starttime, :format => '%A, %d.%B %Y') %> <%= event.pharmacy.emergency_hours_starttime.strftime('%H:%M') %> Uhr<br>
		         bis <%= l(event.endtime, :format => '%A, %d.%B %Y') %> <%= event.pharmacy.emergency_hours_endtime.strftime('%H:%M') %> Uhr</h3b>
		  </center>
		  <center>
			  <h3b><%= event.pharmacy.address %><br>
		         <%= event.pharmacy.zipcode %> <%= event.pharmacy.city %><br>
		         <strong>Tel. <%= event.pharmacy.phone_number %></strong></h3b>
		  </center>
		</div>	
		<div class="mb"></div>
		<div class="white_container">
		  <center>
			  <h4b><%= event.pharmacy.emergency_group.website_note %></h4b>
			</center>
		</div>
	<% end %>
<% end %>
<% else %>
<h2><%= t 'no.event' %></h2>
<% end %>