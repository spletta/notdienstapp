<% provide(:title, 'Events') %>
<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>
<p>
	<strong>Emergency Group:</strong>
  <%= @event.emergency_group.name %>
<p>
<p>
	<strong>Pharmacies from Group:</strong>
  <% @event.emergency_group.pharmacies.each do |pharmacy| %>
    <li><%= pharmacy.name %></li>
  <% end %>
</p>
<p>
	<strong>Pharmacy:</strong>
  <%= @event.pharmacy.name %></li>
</p>
<p>
  <strong>Start time:</strong>
  <%= @event.starttime %>
</p>
<p>
  <strong>End time:</strong>
  <%= @event.endtime %>
</p>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>All Day:</strong>
  <%= @event.all_day %>
</p>

<p>
  <%= link_to "Edit", edit_event_path(@event) %> |
  <%= link_to "Destroy", @event, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", events_path %>
</p>
