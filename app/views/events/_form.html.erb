<div class="row">
  <div class="span4">
    <%= simple_form_for @event do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.association :pharmacy %>
  </p>
  <p>
    <%= f.label :starttime %>
    <%= f.text_field :starttime %>
  </p>
  <p>
    <%= f.label :endtime %>
    <%= f.text_field :endtime %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :all_day %>
    <%= f.check_box :all_day %>
  </p>
  <p><%= f.submit %></p>
<% end %>
  </div>
</div>

