<% provide(:title, 'All Events') %>

<p><%= link_to "New Event", new_event_path %> |
	<% if mobile_device? %>
    <%= link_to "Monthly View", :mobile => 0 %>
  <% else %>
    <%= link_to "Daily View", :mobile => 1 %>
  <% end %>
</p>
<div id="events">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @events_by_date[date] %>
      <ul>
        <% @events_by_date[date].each do |event| %>
          <li><%= link_to event.pharmacy.name, event %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>	
</div>