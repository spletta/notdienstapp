<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
	<div class="span8">
    <% if @user.pharmacies.any? %>
      <h3>Pharmacies (<%= @user.pharmacies.count %>)</h3>
      <ol class="pharmacies">
        <%= render @pharmacies %>
      </ol>
      <%= will_paginate @pharmacies %>
    <% end %>
  </div>
</div>