<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
	<div class="span8">
    <strong>Pharmacies:</strong>
		<ul>
		<% @user.pharmacies.each do |pharmacy| %>
		  <li><%= pharmacy.name %></li>
		<% end %>
		</ul>
		
		<strong>Websites:</strong>
		<ul>
		<% @user.websites.each do |website| %>
		  <li>Name: <%= website.name %></li>
		  <li>Subdomain: <%= website.subdomain %></li>
		<% end %>
		</ul>

		<p>
		  <%= link_to "Edit", edit_user_path(@user) %> |
		  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
		  <%= link_to "View All", users_path %>
		</p>
  </div>
</div>