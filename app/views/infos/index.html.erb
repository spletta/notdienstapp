<% provide(:title, 'Customer Information') %>
<div class="row">
	</br>
  <div class="span8 offset2">
	  <h3c><%= t 'information.index-title' %></h3c>
		<table class="table table-hover">
		  <tr>
				<th><%=  t "information.title" %></th>
				<th>&nbsp;</th>
	    <tr>
			<% @infos.each do |info| %>
			  <tr>
				  <td><%= info.title %></td>
				  <td>
					  <%= link_to t('emergency.group.edit.button'), edit_info_path(info), class: "btn btn-mini" %>
				    <%= link_to t('emergency.group.destroy.button'), info, :confirm => t('emergency.group.confirm.delete'), :method => :delete, class: "btn btn-mini btn-danger" %>
			    </td> 
				</tr>
			<% end %>
		</table>
		</br>
		<p><%= link_to t('emergency.group.create.button'), new_info_path, :class => 'btn btn-mini btn-primary' %></p>
  </div>
</div>



