<%= simple_form_for @info do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<table class="table table-hover">
  </tr>
  <tr>
  	<td><%= f.label t 'information.form-title' %></td>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
  	<td><%= f.label t 'information.form-description' %></td>
    <td><%= f.text_area :description, :rows => 5 %></td>
  </tr>
  <tr>
  	<td><%= f.label t 'information.form-footer' %></td>
    <td><%= f.text_field :footer %></td>
  </tr>
</table>
<%= link_to t('pharmacies.back.link'), infos_path, class: "btn btn-mini" %>
<%= link_to t('emergency.show.link'), @info, class: "btn btn-mini" %>
<%= link_to t('emergency.viewall.link'), infos_path, class: "btn btn-mini" %>
<%= f.submit t('pharmacies.save.link'), class: "btn btn-mini btn-primary" %>
<% end %>
