

<% provide(:title, "Welcome") %> 
<div class="row">
  <div class="span5 offset1">
	<p>
		<h2c><strong><%= t 'contact.form.title'%></strong></h2c></br>
	  <h2c><strong><%= t 'contact.form.subtitle'%></h2c></strong></br>
	</p>
	</br>
	<p>
		<%= image_tag('ndt-v9-470.png') %>
	</p>
  </br>
        <table class="table table-striped">
				  <tbody>
						<tr>
					      <td><h6>Product Manager:</h6></td>
					      <td><i class="icon-user"></i> <a href="#employees/2">Remington Splettstößer</a></td>
					  </tr>
					  <tr>
					      <td><h6><%= t 'contact.office.phone' %>:</h6></td>
					      <td><i class="icon-home"></i> +49 3973 436 3398</td>
					  </tr>
					  <tr>
					      <td><h6><%= t 'contact.cell.phone' %>:</h6></td>
					      <td><i class="icon-headphones"></i> +49 151 4042 7103</td>
					  </tr>
					  <tr>
					      <td><h6><%= t 'contact.office.fax' %>:</h6></td>
					      <td><i class="icon-home"></i> +49 3221 1226 80808</td>
					  </tr>
					  <tr>
					      <td><h6><%= t 'contact.office.phone.us' %>:</h6></td>
					      <td><i class="icon-home"></i> +1 650 318 3882</td>
					  </tr>
					  <tr>
					      <td><h6>Email:</h6></td>
					      <td><i class="icon-envelope"></i> <a href="mailto:service@notdienstapp.com">service@notdienstapp.com</a></td>
					  </tr>
				  </tbody>
				</table>
        <h4><%= t 'contact.fill.out'%></h4></br>
        <div class="alert alert-success">
          <h4 class="alert-heading"><%= t 'contact.alert.heading' %></h4>
          <%= t 'contact.alert.content' %>
        </div>
  </div>
  <div class="span5">
    <h3c><%= t 'contact.form.heading' %></h3c></br></br>
		<%= form_for @message, :url => contact_path do |form| %>
		  <fieldset class="fields">
		    <div class="field">
		      <%= form.label :name %>
		      <%= form.text_field :name %>
		    </div>
    
		    <div class="field">
		      <%= form.label :email %>
		      <%= form.text_field :email %>
		    </div>
		    <div class="field">
		      <%= form.label :subject %>
		      <%= form.text_field :subject %>
		    </div>
    
		    <div class="field">
		      <%= form.label :body %>
		      <%= form.text_area :body, :rows => 13 %>
		    </div>
		  </fieldset>
  
		  <fieldset class="actions">
		    <%= form.submit "Send", :class => 'btn btn-mini btn-primary' %>
		  </fieldset>
		<% end %>
  </div>
</div>