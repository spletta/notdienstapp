<% provide(:title, @emergency_group.name) %>

<p>
  <strong>Name:</strong>
  <%= @emergency_group.name %>
</p>
<p>
    <strong>Pharmacies:</strong>
		<ul>
		<% @emergency_group.pharmacies.each do |pharmacy| %>
		  <li><%= pharmacy.name %></li>
		<% end %>
		</ul>
</p>
<p>
  <%= link_to t('pharmacies.edit.button'), edit_emergency_group_path(@emergency_group) %> |
  <%= link_to t('pharmacies.destroy.button'), @emergency_group, :confirm => t('pharmacies.confirm.delete'), :method => :delete %> |
  <%= link_to t('pharmacies.viewall.button'), emergency_groups_path %>
</p>
