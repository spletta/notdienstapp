<%= simple_form_for @emergency_group do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<table class="table table-hover">
	<tr>
    <td><%= t 'emergency.group.pharmacy.multiselect' %></td>
    <td><%= f.association :pharmacies, :label => t('emergency.group.pharmacy.dropdown.label'), :collection => Pharmacy.all(:order => 'name'), :required => false %></td>
  </tr>
  </tr>
  <tr>
  	<td><%= f.label t 'emergency.group.group.name' %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
  	<td><%= f.label t 'emergency.group.website.title' %></td>
    <td><%= f.text_field :website_title %></td>
  </tr>
  <tr>
  	<td><%= f.label t 'emergency.group.website.note' %></td>
    <td><%= f.text_field :website_note %></td>
  </tr>
</table>
<%= link_to t('pharmacies.back.link'), emergency_groups_path, class: "btn btn-mini" %>
<%= f.submit t('pharmacies.save.link'), class: "btn btn-mini btn-primary" %>
<% end %>
