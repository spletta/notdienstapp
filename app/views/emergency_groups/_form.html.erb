<%= simple_form_for @emergency_group do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<table class="table table-hover">
	<tr>
    <td><%= t 'emergency.group.pharmacy.dropdown.label', default: 'Select Pharmacies'%></td>
    <td><%= f.association :pharmacies, :collection => Pharmacy.all(:order => 'name')%></td>
  </tr>
  </tr>
  <tr>
  	<td><%= f.label "Group Name" %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
  	<td><%= f.label :website_title %></td>
    <td><%= f.text_field :website_title %></td>
  </tr>
  <tr>
  	<td><%= f.label :website_note %></td>
    <td><%= f.text_field :website_note %></td>
  </tr>
</table>
<%= link_to t('pharmacies.back.link', default: "Back"), emergency_groups_path, class: "btn btn-mini" %>
<%= f.submit t('pharmacies.save', default: "Save"), class: "btn btn-mini btn-primary" %>
<% end %>
