<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "notdienst-touch", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li>
          <%= link_to help_path do %>
            <%= t "help_link", default: "Help" %>
          <% end %>
          </li>
          <% if signed_in? %>
            <li>
	          	<%= link_to users_path do %>
		            <%= t "users_link", default: "Users" %>
		          <% end %>
	          </li>
            <li id="fat-menu" class="dropdown">
              <%= link_to "#", :class => "dropdown-toggle", :data => {:toggle=>"dropdown"}  do %>
                <%= t "account_link", default: "Account" %><b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
	              <div class="user-information">
		              <strong><%= current_user.name %></strong><br />
		              <span>Company Name</span>
		            </div>
                <li><%= link_to "Profile", current_user %></li>
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <%= t "settings_link", default: "Settings" %>
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to signout_path, method: "delete" do %>
                    <%= t "signout_link", default: "Sign out" %>
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	            <% if I18n.locale == :en %>
	              <%= image_tag('us.png') + "  English" %><b class="caret"></b>
	            <% elsif I18n.locale == :de %>
	               <%= image_tag('de.png') + "  Deutsch" %><b class="caret"></b>
	            <% else %>
                 Language <b class="caret"></b>
              <% end %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to image_tag('us.png') + "  English", locale: "en" %></li>
              <li><%= link_to image_tag('de.png') + "  Deutsch", locale: "de" %></li>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>