<% provide(:title, @pharmacy.name) %>
	<div class="span6 offset3">      
<table class="table table-striped">
  <tbody>
	  <tr>
	    <td><h6>Emergency Group:</h6></td>
	      <% if @pharmacy.emergency_group.nil? %>
		      <td>This Pharmacy is currently not associated with an Emergency Group, go <%= link_to "here", edit_pharmacy_path %> to change that.</td>
        <% else %>
          <td><i class="icon-th"></i> <%= @pharmacy.emergency_group.name %></td>
        <% end %>
	  </tr>
		<tr>
	      <td><h6>Name:</h6></td>
	      <td><i class="icon-user"></i> <%= @pharmacy.name %></td>
	  </tr>
		<tr>
	      <td><h6>Owner Name:</h6></td>
	      <td><i class="icon-user"></i> <%= @pharmacy.owner_name %></td>
	  </tr>
		<tr>
	      <td><h6>BGA Number:</h6></td>
	      <td><i class="icon-user"></i> <%= @pharmacy.bga_number %></td>
	  </tr>
	  <tr>
	      <td><h6>Tel:</h6></td>
	      <td><i class="icon-home"></i> <%= @pharmacy.phone_number %></td>
	  </tr>
	  <tr>
	      <td><h6>Fax:</h6></td>
	      <td><i class="icon-home"></i> <%= @pharmacy.fax_number %></td>
	  </tr>
	  <tr>
	      <td><h6>Email:</h6></td>
	      <td><i class="icon-envelope"></i> <%= @pharmacy.email %></td>
	  </tr>
	  	  <tr>
	      <td><h6>Address:</h6></td>
	      <td><i class="icon-home"></i>
		      <%= @pharmacy.address %>,
		      <%= @pharmacy.zipcode %> <%= @pharmacy.city %>
		    </td>
	  </tr>
  </tbody>
</table>
<p>
 <%= link_to "Back", pharmacies_path, :class => 'btn btn-mini' %>
 <%= link_to "Edit", edit_pharmacy_path(@pharmacy), :class => 'btn btn-mini' %>
 <%= link_to "Destroy", pharmacy_path(@pharmacy), :method => :delete, :class => 'btn btn-mini btn-danger' %>
</p>


  </div>
</div>