<% provide(:title, 'Manage Pharmacies') %>
<div class="row">
  <div class="span8">
	  <h1><%= t 'pharmacies.title', default: "Manage Pharmacies" %></h1>
		<p><%= t 'pharmacies.search', default: "Search for a pharmacy" %></p>
			<%= form_tag pharmacies_path, :method => 'get', class: "form-search" do %>
			  <p>
			    <%= text_field_tag :search, params[:search], class: "input-large search-query" %>
			    <%= submit_tag t('pharmacies.search.button', default: "Search"), :name => nil, class: "btn" %>
			  </p>
			<div id="pharmacies"><%= render 'pharmacy_table' %></div>
			<% end %>
		</br>
		<p><%= t 'pharmacies.add.text', default: 'Add a new pharmacy ' %><%= link_to t('pharmacies.add.link', default: "here"), new_pharmacy_path %>.</p>
  </div>
</div>
</br>



