<% provide(:title, 'Manage Pharmacies') %>
<div class="row">
  <aside class="span4">
    <section>
    <h1>Manage Pharmacies</h1>
    </section>
  </aside>
	<div class="span8">
  </div>
</div>
<div class="row">
  <div class="span8">
		<p>Search for a pharmacy</p>
			<%= form_tag pharmacies_path, :method => 'get', class: "form-search" do %>
			  <p>
			    <%= text_field_tag :search, params[:search], class: "input-large search-query" %>
			    <%= submit_tag "Search", :name => nil, class: "btn" %>
			  </p>
			<div id="pharmacies"><%= render 'pharmacies' %></div>
			<% end %>
		</br>
		<p>or <%= link_to "add", new_pharmacy_path %> a new pharmacy.</p>
  </div>
</div>
</br>
<div class="row">
  <aside class="span4">
    <section>
    <h1>Associated Pharmacies</h1>
    </section>
  </aside>
	<div class="span8">
  </div>
</div>
<div class="row">
  <div class="span8">
	<p>User has_many :followed_pharmacies, through: :users_pharmacies, source: "followed_id"</p>
  </div>
</div>




